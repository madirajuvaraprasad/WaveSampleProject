<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/WHITE"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/normal_helvetica"
        android:text="Cancel"
        android:textAllCaps="true"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:textStyle="normal"
        android:textColor="@color/GRAY_TEXT"
        android:layout_marginTop="5dp"
        >

    </TextView>
    <LinearLayout
        android:id="@+id/loginForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Customer"
            android:layout_marginLeft="20dp"
            android:textSize="35dp"
            android:textStyle="normal"
            android:fontFamily="@font/normal_helvetica"
            android:textColor="@color/BLACK"
            android:layout_marginTop="60dp">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic info"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:fontFamily="@font/normal_helvetica"
            android:textStyle="normal"
            android:textColor="@color/GRAY_TEXT"
            android:layout_marginTop="20dp"
            >

        </TextView>
        <LinearLayout
            android:id="@+id/paymentHistoryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="2dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="9"
                android:src="@drawable/zomato"
                android:padding="5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/petName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/normal_helvetica"
                        android:padding="1dp"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@drawable/right_button"
                        android:text="ZOMATO"
                        android:textStyle="bold"
                        android:textColor="@color/BLACK_TEXT"
                        android:textSize="20dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/vetName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/normal_helvetica"
                            android:maxLines="1"
                            android:padding="1dp"
                            android:text="Gurgaon,Haryana,India"
                            android:textColor="@color/BLACK_TEXT"
                            android:textSize="16sp" />

                    </RelativeLayout>




                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/normal_helvetica"
                android:text="Customer name"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textStyle="normal"
                android:textColor="@color/GRAY_TEXT"
                android:layout_marginTop="15dp"
                >

            </TextView>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/WHITE"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                >

                <AutoCompleteTextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/BLACK"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:fontFamily="@font/normal_helvetica"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="Prasad"
                    android:textColorHint="@color/BLACK_TEXT" />


            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email address"
                android:fontFamily="@font/normal_helvetica"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textStyle="normal"
                android:textColor="@color/GRAY_TEXT"
                android:layout_marginTop="15dp"
                >

            </TextView>



                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:backgroundTint="@color/WHITE">


                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/BLACK"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/normal_helvetica"
                        android:textSize="18dp"
                        android:inputType="textEmailAddress"
                        android:text="prasad@gmail.com"
                        android:textStyle="bold"
                        android:textColorHint="@color/BLACK_TEXT" />

                </android.support.design.widget.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/normal_helvetica"
                android:text="Website url"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textStyle="normal"
                android:textColor="@color/GRAY_TEXT"
                android:layout_marginTop="15dp"
                >

            </TextView>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/WHITE"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                >

                <AutoCompleteTextView
                    android:id="@+id/web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/BLACK"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:fontFamily="@font/normal_helvetica"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:text="www.zomato.com"
                    android:textColor="@color/BLACK"
                    android:textColorHint="@color/GRAY_TEXT" />


            </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/info_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="35dp"
                    android:padding="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:inputType="textCapWords"
                    android:fontFamily="@font/normal_helvetica"
                    android:text="Add more Informations"
                    android:drawableRight="@drawable/right_button"
                    android:textAlignment="textStart"
                    android:background="@drawable/roundedgraybuttondiscount"
                    android:textSize="18sp"
                    android:textColor="@color/BLACK"
                    android:longClickable="false"
                    android:textAllCaps="true"
                    />
<!--            <Button-->
<!--                android:id="@+id/facebookButton"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_margin="7dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:fontFamily="@font/normal_helvetica"-->
<!--                android:layout_weight="4"-->
<!--                android:longClickable="false"-->
<!--                android:inputType="textCapWords"-->
<!--                android:textColor="@color/BLACK"-->
<!--                android:text="FACEBOOK"-->
<!--                android:textAllCaps="true"-->
<!--                android:textSize="18sp"-->

<!--                />-->

        </LinearLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="9"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:drawableRight="@drawable/right_button"
                    android:fontFamily="@font/normal_helvetica"
                    android:textSize="18dp"
                    android:textColor="@color/BLACK"
                    android:text="Currency"
                    />
                <TextView
                    android:id="@+id/doneFloatButton"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:fontFamily="@font/normal_helvetica"
                    android:background="@drawable/circle_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:text="Done"
                    android:textSize="15dp"
                    android:elevation="10dp"/>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>