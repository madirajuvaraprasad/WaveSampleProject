<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/WHITE"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:fontFamily="@font/normal_helvetica"
            android:text="Back"
            android:textColor="@color/BLACK_TEXT"
            android:textSize="15dp"
            android:textAllCaps="true"
            android:textStyle="normal" />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/BLACK_TEXT"
            android:textStyle="normal"
            android:textSize="15dp"
            android:textAlignment="textEnd"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/normal_helvetica"
            android:textAllCaps="true"
            android:layout_marginLeft="10dp"
            android:text="Templates" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/loginForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Invoice"
            android:layout_marginLeft="15dp"
            android:textSize="40dp"
            android:textStyle="normal"
            android:fontFamily="@font/normal_helvetica"
            android:textColor="@color/BLACK"
            android:layout_marginTop="70dp">

        </TextView>
        <LinearLayout
            android:id="@+id/paymentHistoryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/normal_helvetica"
                        android:padding="1dp"
                        android:text="#invoice 39"
                        android:textStyle="bold"
                        android:textColor="@color/BLACK_TEXT"
                        android:textSize="20dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/normal_helvetica"
                            android:maxLines="1"
                            android:padding="1dp"
                            android:text="Project name"
                            android:textColor="@color/GRAY_TEXT"
                            android:textSize="14sp" />

                    </RelativeLayout>




                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/petName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/normal_helvetica"
                        android:padding="1dp"
                        android:text="Draft"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@color/BLACK_TEXT"
                        android:textSize="20dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/vetName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/normal_helvetica"
                            android:maxLines="1"
                            android:padding="1dp"
                            android:text="P.O/S.O number"
                            android:textAlignment="textEnd"
                            android:textColor="@color/GRAY_TEXT"
                            android:textSize="14sp" />

                    </RelativeLayout>




                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="4"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:fontFamily="@font/normal_helvetica"
                android:text="Invoice date"
                android:textColor="@color/BLACK_TEXT"
                android:textSize="18dp"
                android:textStyle="normal" />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/BLACK_TEXT"
                android:textStyle="normal"
                android:textAlignment="center"
                android:drawableRight="@drawable/right_button"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:layout_marginRight="50dp"
                android:fontFamily="@font/normal_helvetica"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="18 april 2020" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LinearLayout0123">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="4"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Payment due"
                android:fontFamily="@font/normal_helvetica"
                android:textColor="@color/BLACK_TEXT"
                android:textSize="18dp"
                android:textStyle="normal" />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/BLACK_TEXT"
                android:textStyle="normal"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:layout_marginRight="50dp"
                android:textAlignment="center"
                android:drawableRight="@drawable/right_button"
                android:fontFamily="@font/normal_helvetica"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Within 5 days" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/addCustomerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:drawableRight="@drawable/right_button"
                android:textAlignment="textStart"
                android:padding="15dp"
                android:background="@drawable/roundedgraybuttondiscount"
                android:inputType="textCapWords"
                android:fontFamily="@font/normal_helvetica"
                android:text="Add Customer"
                android:textSize="18sp"
                android:textColor="@color/BLACK"
                android:longClickable="false"
                android:textAllCaps="true"
                />

            <Button
                android:id="@+id/addItemButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/normal_helvetica"
                android:background="@drawable/roundedgraybuttondiscount"
                android:layout_weight="1"
                android:longClickable="false"
                android:textStyle="bold"
                android:inputType="textCapWords"
                android:drawableRight="@drawable/right_button"
                android:textAlignment="textStart"
                android:padding="15dp"
                android:textColor="@color/BLACK"
                android:text="Add Item"
                android:textAllCaps="true"
                android:textSize="18sp"

                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:layout_marginRight="5dp"
                android:paddingTop="10dp"
                android:fontFamily="@font/normal_helvetica"
                android:text="Total"
                android:textStyle="bold"
                android:textColor="@color/BLACK"
                android:textSize="20dp"
                 />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/BLACK_TEXT"
                android:textStyle="normal"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textAlignment="textEnd"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="25dp"
                android:text="$390.00" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:backgroundTint="@color/LIGHTEST_GRAY"
            android:background="@drawable/roundedgraybuttondiscount"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/amountDueButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/normal_helvetica"
                android:layout_weight="5"
                android:longClickable="false"
                android:textStyle="bold"
                android:inputType="textCapWords"
                android:textColor="@color/GRAY_TEXT"
                android:text="Amount Due"
                android:textAllCaps="true"
                android:textSize="18dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:textStyle="normal"
                android:textAlignment="textEnd"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="$390.00">

            </TextView>

        </LinearLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/normal_helvetica"
                    android:textSize="18dp"
                    android:drawableRight="@drawable/right_button"
                    android:textColor="@color/BLACK"
                    android:text="Record Payment"
                    />
                <TextView
                    android:id="@+id/doneFloatButton"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:fontFamily="@font/normal_helvetica"
                    android:background="@drawable/circle_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:text="send"
                    android:textSize="15dp"
                    android:elevation="10dp"/>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>