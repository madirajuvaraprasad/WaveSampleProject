<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/WHITE"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/wave_image"
        android:layout_height="200dp">

    </ImageView>

    <LinearLayout
        android:id="@+id/loginForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wave Login"
            android:layout_marginLeft="20dp"
            android:textSize="40dp"
            android:textStyle="normal"
            android:fontFamily="@font/normal_helvetica"
            android:textColor="@color/BLACK"
            android:layout_marginTop="200dp"
            >

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/googleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:padding="15dp"
                android:inputType="textCapWords"
                android:fontFamily="@font/normal_helvetica"
                android:text="GOOGLE"
                android:textSize="18sp"
                android:textColor="@color/BLACK"
                android:longClickable="false"
                android:textAllCaps="true"
                />

            <Button
                android:id="@+id/facebookButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/normal_helvetica"
                android:layout_weight="1"
                android:padding="15dp"
                android:longClickable="false"
                android:inputType="textCapWords"
                android:textColor="@color/BLACK"
                android:text="FACEBOOK"
                android:textAllCaps="true"
                android:textSize="18sp"

                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Or"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:fontFamily="@font/normal_helvetica"
            android:textStyle="normal"
            android:textColor="@color/GRAY_TEXT"
            android:layout_marginTop="40dp"
            >

        </TextView>
        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/normal_helvetica"
                android:text="Email Address"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textStyle="normal"
                android:textColor="@color/GRAY_TEXT"
                android:layout_marginTop="15dp"
                >

            </TextView>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/WHITE"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                >

                <AutoCompleteTextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/BLACK"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="sureshsuri@gmail.com"
                    android:textColorHint="@color/BLACK_TEXT" />


            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:fontFamily="@font/normal_helvetica"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:textStyle="normal"
                android:textColor="@color/GRAY_TEXT"
                android:layout_marginTop="15dp"
                >

            </TextView>
            <RelativeLayout
                android:id="@+id/rlSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:backgroundTint="@color/WHITE">


                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/BLACK"
                        android:ems="10"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:inputType="textPassword"
                        android:text="12345678"
                        android:textColorHint="@color/GRAY_TEXT" />

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>



        </LinearLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="9"
                android:orientation="horizontal">


            <TextView
                android:id="@+id/dontHaveAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
           android:textSize="18dp"
                android:fontFamily="@font/normal_helvetica"
                android:layout_marginTop="10dp"
                android:textColor="@color/BLACK_TEXT"
                android:text="Don't have the account yet?"
                />
            <TextView
                android:layout_width="120dp"
                android:layout_below="@id/dontHaveAccount"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:drawableRight="@drawable/right_button"
                android:textStyle="bold"
                android:fontFamily="@font/normal_helvetica"
                android:textSize="18dp"
                android:textColor="@color/BLACK"
                android:text="SIGNUP "
                />
                <TextView
                    android:id="@+id/nextFloatButton"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:fontFamily="@font/normal_helvetica"
                    android:background="@drawable/circle_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:text="Next"
                    android:textSize="15dp"
                    android:elevation="10dp"/>
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>




</RelativeLayout>